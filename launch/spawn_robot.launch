<?xml version="1.0"?>

<launch>

    <!-- Arg to change robot name and be able to spawn multiple robots-->
    <arg name="robot_name" default="/"/>

    <!-- Include visualization & RViz -->
    <include file="$(find kobuki_control)/launch/view_robot.launch"/>

    <!-- LAUNCH GAZEBO -->

    <!-- Add world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value ="taller2.world"/>
        <arg name="paused" value ="false" />
        <arg name="use_sim_time" value ="true" />
        <arg name="gui" value ="true" />
        <arg name="verbose" value ="False" />
    </include>

    <!-- Robot initial pose -->
    <arg name="x" default="-1.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.5"/>
    <arg name="roll" default="0.0"/>
    <arg name="pitch" default="0.0"/>
    <arg name="yaw" default="$(eval -pi/2)"/>

    <!-- Spawn model -->
    <node 
        pkg="gazebo_ros" 
        type="spawn_model" 
        name="spawn_test_robot"
        respawn="false"
        ns="$(arg robot_name)"
        args="-x $(arg x) -y $(arg y) -z $(arg z)
              -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)
              -urdf 
              -param robot_description
              -model test_robot"
    />
    
    <!-- CONTROLLER MANAGER -->
    
    <rosparam 
        file="$(find kobuki_control)/config/test_robot_controller.yaml" 
        command="load"
    />
    
    <node
        name="Robot_controller"
        pkg="controller_manager"
        type="spawner"
        respawn="false"
        output="screen"
        args="joint_state_controller wheel_left_ctrl wheel_right_ctrl"
    />

</launch>