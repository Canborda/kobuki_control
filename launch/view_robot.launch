<?xml version="1.0"?>

<launch>

    <!-- Load model -->
    <arg name="urdf_file" default="$(find xacro)/xacro '$(find kobuki_control)/urdf/kobuki_standalone.urdf.xacro'"/>

    <!-- Parse model -->
    <param name="robot_description" command="$(arg urdf_file)"/>

    <!-- NODES -->

    <!-- states publisher -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="rob_pub" output="screen">
        <param name="publish_frequency" type="double" value="5.0"/>
    </node>

    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state">
        <param name="use_gui" value="true"/>
    </node>

    <!-- RViz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find kobuki_control)/rviz/model.rviz"/>

</launch>